{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "plugin:react/recommended",
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-empty": "off",
    "react/react-in-jsx-scope": "off",
    "no-warning-comments": [
      "warn",
      { "terms": ["fixme", "xxx", "todo"], "location": "anywhere" }
    ]
  }
}
